// A launch configuration that compiles the extension and then opens it inside a new window
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Client",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--disable-extensions",
				"--extensionDevelopmentPath=${workspaceRoot}/packages/vscode-svelte"
			],
			"outFiles": [
				"${workspaceRoot}/*/*/out/**/*.js"
			],
			"preLaunchTask": {
				"type": "npm",
				"script": "watch"
			}
		},
		{
			"name": "Attach to Server",
			"type": "node",
			"request": "attach",
			"port": 3009,
			"restart": true,
			"outFiles": [
				"${workspaceRoot}/*/*/out/**/*.js"
			]
		},
	],
}